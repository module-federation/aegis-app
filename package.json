{
  "name": "aegis-app",
  "version": "1.0.1",
  "description": "",
  "main": "./dist/main.js",
  "installConfig": {
    "pnp": false
  },
  "repository": {
    "url": "https://github.com/module-federation/aegis-app"
  },
  "scripts": {
    "build": "yarn clean && webpack --config webpack.config.js",
    "buildLocalRepo": "yarn clean && webpack --config webpack.config.local.js",
    "startLocalRepo": "node repo.js",
    "startLocalRepo2": "export FORKRUN_CMD=$NVM_BIN; export FORKRUN_ARG=./repo.js; sudo ../aegis/forkrun",
    "bar": "yarn buildAndRestart",
    "startHost": "cd ../aegis-host && yarn start",
    "webswitch": "cd ../aegis-host ; export SWITCH=true ; export PORT=8888 ; yarn start",
    "newModel": "git commit -a -m test && yarn buildLocalRepo && yarn openReload",
    "linkAndStart": "cd ../aegis && ./start.sh",
    "buildAll": "cd ../aegis && yarn build && cd ../aegis-host && yarn build && cd ../aegis-app && yarn buildLocalRepo",
    "buildAndRestart": "yarn buildAll && yarn linkAndStart",
    "stopHost": "cd ../aegis-host && yarn stop",
    "restartHost": "yarn stopHost && yarn rebuild",
    "opengp": "gp preview https://${PORT}-${GITPOD_WORKSPACE_ID}.${GITPOD_WORKSPACE_CLUSTER_HOST}/hot-reload.html",
    "openReload": "open -u https://${PORT}-${GITPOD_WORKSPACE_ID}.${GITPOD_WORKSPACE_CLUSTER_HOST}/hot-reload.html",
    "openurl": "open -u http://localhost",
    "newModel2": "git commit -a -m test && yarn buildLocalRepo && open -u http://localhost/hot-reload.html",
    "updateModel": "git commit -a -m test && yarn buildLocalRepo",
    "build-wasm": "asc src/assemblyscript/exports.ts -b src/assemblyscript/exports.wasm -t src/assemblyscript/exports.wat",
    "start": "node -r dotenv/config dist/main.js",
    "start-all": "npm run kafka-start && node -r dotenv/config dist/main.js",
    "dev-start": "nodemon --watch src --exec npm restart",
    "clean": "rm -rf dist",
    "transpile": "babel src -d dist",
    "test": "mocha",
    "test-remote": "mocha",
    "demo": "open http://localhost:8060",
    "hot-reload": "curl http://localhost/microlib/reload",
    "kafka-start": "npm run kafka-stop && scripts/start-kafka.sh && sleep 5 && npm run kafka-topics-create",
    "kafka-stop": "scripts/stop-kafka.sh",
    "kafka-clear-events": "npm run kafka-topics-delete && npm run kafka-topics-create",
    "kafka-topics-delete": "scripts/delete-topics.sh",
    "kafka-topics-create": "scripts/create-topics.sh",
    "refresh-token": "./accessToken.sh"
  },
  "author": "Tyson Midboe",
  "license": "MIT",
  "dependencies": {
    "@assemblyscript/loader": "^0.19.10",
    "axios": "^0.21.1",
    "dotenv": "^16.0.3",
    "express": "^4.18.1",
    "express-session": "^1.17.1",
    "kafkajs": "^1.14.0",
    "multicast-dns": "^7.2.5",
    "nanoid": "^3.1.12",
    "smartystreets-javascript-sdk": "^1.6.0",
    "square": "^8.1.0",
    "ws": "^7.5.2"
  },
  "devDependencies": {
    "@babel/cli": "^7.10.5",
    "@babel/core": "^7.11.1",
    "@babel/helper-validator-option": "^7.12.17",
    "@babel/polyfill": "^7.11.5",
    "@babel/preset-env": "^7.11.0",
    "@babel/register": "^7.12.1",
    "assemblyscript": "^0.19.10",
    "babel-loader": "^8.2.5",
    "esm": "^3.2.25",
    "express-cli": "0.0.1",
    "is-core-module": "^2.2.0",
    "mocha": "^8.2.0",
    "py-loader": "^0.3.1",
    "snowpack": "^3.4.0",
    "webpack": "5.0.0-beta.28",
    "webpack-cli": "^3.3.12",
    "webpack-node-externals": "^2.5.2"
  }
}
